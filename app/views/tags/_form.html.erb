
<%= form_for(tag) do |f| %>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.text_field :category, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :favorite %> 
    <%= f.check_box :favorite %>
  </div>
  <div class="mt-3">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', root_path, class: 'btn btn-danger ml-2' %>
  </div>
<% end %>